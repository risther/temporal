@model List<SistemaCitasMedicas.Models.Especialista>
@{ 
    //Layout = null;
    ViewBag.Title = "Index";
}

<h2 class="card-header">
    <a href="~/Especialista/AgregarEditar/" class="btn btn-info float-right"> Nuevo Especialista </a>
</h2>

@using (Html.BeginForm("Index", "Especialista", FormMethod.Post, new { especialista = "frm-especialista" }))
{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("criterio")
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>NOMBRE Y APELLIDO</th>
            <th>TELEFONO</th>
            <th>CORRERO</th>
            <th>CONTRASEÑA</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
<tr>
    <td>@(m.especialista_id)</td>
    <td>@(m.dni)</td>
    <td>@(m.nombre), @(m.apellido)</td>
    <td>@(m.telefono)</td>
    <td>@(m.correo)</td>
    <td>@(m.contrasenia)</td>


    <td style="align-content:center; ">
        <a href="~/Especialista/Visualizar/@m.especialista_id" class="btn btn-warning">DETALLE</a>
        <a href="~/Especialista/AgregarEditar/@m.especialista_id" class="btn btn-primary">MODIFICAR</a>
        <a href="~/Especialista/Eliminar/@m.especialista_id" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar elemento?'); ">ELIMINAR</a>

    </td>
</tr>}
    </tbody>
</table>

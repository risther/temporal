@model SistemaCitasMedicas.Models.Especialista
@{ 
    ViewBag.Title = "AgregarEditar";
    List<SistemaCitasMedicas.Models.TipoUsuario> tipoUsuarios = ViewBag.tipoUsuario;
    List<SistemaCitasMedicas.Models.TipoEspecialista> tipoEspecialista = ViewBag.tipoEspecialista;

 }

<h2>Agregar / Editar</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Especialista/Index">Especialista</a></li>
        <li class="breadcrumb-item active">@Model.nombre</li>
    </ol>
</nav>

<br />
<br />

@using (Html.BeginForm("Guardar", "Especialista", FormMethod.Post))
{
@Html.HiddenFor(X => X.especialista_id)

                <div class="card">
                    <div class="card-header">Informacion del Especialista</div>
                    <div class="card-body">

                        <div class="form-group">
                            @Html.LabelFor(x => x.especialista_id)
                            @Html.TextBoxFor(x => x.especialista_id, new { @class = "form-control", disabled = true })
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(x => x.tipoEspecialista_id)
                            <select name="tipoEspecialista_id" class="form-control">
                                <option @(Model.tipoEspecialista_id.Equals("") ? "selected" : "") value="">Seleccione</option>

                                @foreach (var d in tipoEspecialista)
                                {
                                 <option @(Model.tipoEspecialista_id.Equals(d.tipoEspecialista_id) ? "selected" : "") value="@d.tipoEspecialista_id">@d.nombre </option>}
                            </select>
                            @Html.ValidationMessageFor(x => x.tipoEspecialista_id, null, new { @class = "text-danger" })
                        </div>

                         <div class="form-group">
                            @Html.LabelFor(x => x.tipoUsuario_id)
                            <select name="tipoUsuario_id" class="form-control">
                                <option @(Model.tipoUsuario_id.Equals("") ? "selected" : "") value="">Seleccione</option>

                                @foreach (var d in tipoUsuarios)
                                {
                                    <option @(Model.tipoUsuario_id.Equals(d.tipoUsuario_id) ? "selected" : "") value="@d.tipoUsuario_id">@d.nombre </option>
                                }
                            </select>
                            @Html.ValidationMessageFor(x => x.TipoUsuario, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.dni)
                            @Html.TextBoxFor(x => x.dni, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.dni, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.nombre)
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.apellido)
                            @Html.TextBoxFor(x => x.apellido, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.apellido, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.telefono)
                            @Html.TextBoxFor(x => x.telefono, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.telefono, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.correo)
                            @Html.TextBoxFor(x => x.correo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.correo, null, new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.contrasenia)
                            @Html.TextBoxFor(x => x.contrasenia, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.contrasenia, null, new { @class = "text-danger" })
                        </div>



                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a href="~/Especialista" class="btn btn-danger">Cancelar</a>
                        </div>

                    </div>


                </div>}